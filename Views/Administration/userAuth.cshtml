@{
}


@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@await Html.PartialAsync("_AdminMenu")

    <h1>Users</h1>

    <div class="row">
        <div class="col-12">
            @if (Model.Count == 0)
            {
            <p>No users</p>
            }
             else
            {   
                <table class="table">
                    <thead>
                        <tr>
                            <th>UserName</th>
                           
                            <th>Actions</th>
                            <th>Delete</th>
                        </tr>
                    </thead>"
                    <tbody>
                        @foreach(var u in Model)
                    {
                        <tr>
                            <td>@u.UserName</td>
                            <td>
                                <a class="btn btn-success" asp-route-userId="@u.Id"
                                asp-action="Details">View Roles</a>
                            </td>
                            <td>
                                <a class="btn btn-outline-danger" asp-route-userName="@u.UserName"
                           asp-action="RemoveUser">Remove User</a>
                            </td>
                        </tr>
                    }
                </tbody>
                </table>
            }
        </div>
    </div>